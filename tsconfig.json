{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"declaration": false,
		"skipLibCheck": true,
		"sourceMap": false,
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}