{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"declaration": false,
		"skipLibCheck": true,
		"sourceMap": false,
		"noEmit": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"types": ["unplugin-icons/types/vue", "node", "vue"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/packages/shadcn/**/*.vue"
	],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}